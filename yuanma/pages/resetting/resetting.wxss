/* pages/resetting/resetting.wxss */

page {
    background-color: #eee;
}

.phoneNum {
    display: block;
    text-align: center;
    padding: 70rpx;
}

.pswInfo {
    width: 95%;
    margin: 0 auto;
    background-color: white;
    border-radius: 20rpx;
    padding-bottom: 50rpx;
}

.code {
    width: 85%;
    margin: 0 auto;
    display: flex;
    flex-flow: row;
    border-bottom: 1px solid #eee;
    padding: 30rpx 0;
}

.code text:nth-of-type(1) {
    margin-top: 5rpx;
    padding-right: 10rpx;
    font-size: 28rpx;
    /* border: 1px solid red; */
}

.code input:nth-of-type(1) {
    padding-left: 20rpx;
    border-left: 1px solid black;
    font-size: 28rpx;
    width: 240rpx;
    margin-left: 33rpx;
}

.code text:nth-of-type(2) {
    background-color: #f23031;
    color: #eee;
    border-radius: 10rpx;
    padding: 10rpx;
    font-size: 26rpx;
    float: right;
    margin-left: 40rpx;
    line-height: 30rpx;
}
.code text:nth-of-type(3) {
    background-color: #f23031;
    color: #eee;
    border-radius: 10rpx;
    padding: 10rpx;
    font-size: 30rpx;
    float: right;
    margin-left: 40rpx;
    line-height: 30rpx;
    width: 130rpx;
    text-align: center;
}

.newPwd {
    width: 85%;
    margin: 0 auto;
    display: flex;
    flex-flow: row;
    border-bottom: 1px solid #eee;
    padding: 30rpx 0;
}

.newPwd text:nth-of-type(1) {
    margin-top: 5rpx;
    padding-right: 10rpx;
    font-size: 28rpx;
}

.newPwd input:nth-of-type(1) {
    padding-left: 20rpx;
    border-left: 1px solid black;
    font-size: 28rpx;
    width: 280rpx;
    margin-left: 33rpx;
}
.newPwd text:nth-of-type(2) {
    margin-top: 5rpx;
    padding-right: 10rpx;
    font-size: 24rpx;
    background-color: #f23031;
    color:white;
    border-radius: 6rpx;
    margin-left: 15rpx;
    padding: 5rpx;
}
.pswInfo button {
    width: 80%;
    background-color: #f23031;
    color: #eee;
    margin-top: 50rpx;

}
.prompt{
    display: block;
    color: rgb(92, 92, 92);
    font-size: 27rpx;
    width: 90%;
    margin: 0 auto;
    padding-top: 30rpx;
}
.againPwd {
    width: 85%;
    margin: 0 auto;
    display: flex;
    flex-flow: row;
    border-bottom: 1px solid #eee;
    padding: 30rpx 0;
}

.againPwd text:nth-of-type(1) {
    margin-top: 5rpx;
    padding-right: 10rpx;
    font-size: 28rpx;
}

.againPwd input:nth-of-type(1) {
    padding-left: 20rpx;
    border-left: 1px solid black;
    font-size: 28rpx;
    width: 280rpx;
    margin-left: 20rpx;
}
.againPwd text:nth-of-type(2) {
    margin-top: 5rpx;
    padding-right: 10rpx;
    font-size: 24rpx;
    background-color: #f23031;
    color:white;
    border-radius: 6rpx;
    margin-left: 15rpx;
    padding: 5rpx;
}
.isshow{
    display: block;
     opacity: 1;
}
.hide{
    display: none;
    opacity: 0;
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.8;
}