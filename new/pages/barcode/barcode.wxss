page {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}

.container {
    background: #f5f5f5;
    height: 100%;
}

.photo {
    background: #fff;
    margin-top: -65px;
}

.wen {
    text-align: center;
    font-size: 15px;
    margin-top: 15px;
    margin-left: 10rpx;
}

.tanchuang {
    width: 100%;
    display: flex;
    flex-flow: row;
    justify-content: center;
}

.question {
    width: 60rpx;
    height: 60rpx;
    margin-top: 25rpx;
    margin-left: 10rpx;
}

.panel {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    box-sizing: border-box;
    margin-top: 30px;
    border-radius: 10rpx;
}

.btn {
    width: 680rpx;
    margin-top: 20px;
    height: 100%;
}

button {
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    justify-content: center;
    background: #fff;
}

button::after {
    border: 1px solid rgb(170, 230, 66);
}

.pay {
    width: 60rpx;
    height: 60rpx;
    margin-left: 5px;
    margin-right: 5px;
}

.barcode {
    display: flex;
    height: 320rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: -25px;
}

.barcode > canvas {
    width: 660rpx;
    height: 180rpx;
}

.qrcode {
    height: 420rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    margin-top: -25px;
}

.qrcode > canvas {
    width: 420rpx;
    height: 420rpx;
}

.tishi {
    text-align: center;
    height: 50rpx;
    margin-top: 40rpx;
    margin-bottom: 70rpx;
}

.ti {
    display: table;
    line-height: 50rpx;
    white-space: nowrap;
    border-spacing: 1rem 0;
    font-size: 30rpx;
    color: black;
}

.ti::before, .ti::after {
    display: table-cell;
    content: "";
    width: 50%;
    background: linear-gradient(black, black) repeat-x center;
    background-size: 0.1rem 0.1rem;
}

.isshow {
    /* height: 60%; */
    width: 80%;
    height: 520rpx;
    background-color: white;
    margin-left: 5%;
    position: absolute;
    z-index: 9999;
    padding: 40rpx;
    border-radius: 20rpx;
}

.ishide {
    display: none;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgb(66, 66, 66);
    z-index: 9000;
    opacity: 0.7;
}

.hidetitle {
    font-size: 32rpx;
    display: block;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
}

.hidebody {
    width: 100%;
    padding: 10rpx;
    white-space: pre-line;
    font-size: 32rpx;
    display: block;
    line-height: 65rpx;
}

.close {
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto;
    margin-left: 45%;
    margin-top: 850rpx;
    position: absolute;
    z-index: 9999;
}

.maceng {
    z-index: 9;
    /* position: absolute; */
}
