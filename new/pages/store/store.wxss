/* 列表页 */

.coupon-list {
    position: absolute;
    flex-direction: column;
    /* display: flex; */
    width: 100%;
    height: 220rpx;
    margin-top: 20rpx;
}

.coupon-list .item {
    width: 100%;
    height: 220rpx;
}

.coupon-list .item .float-li {
    width: 69%;
    float: left;
    height: 100%;
    border-right: 6rpx dashed rgba(255, 255, 255, 0.3);
}

.coupon-list .item .float-li-rig {
    width: 225rpx;
    height: 100%;
    color: black;
    float: right;
}

.coupon-left {
