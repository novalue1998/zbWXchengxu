/* pages/poster/poster.wxss */
page {
  background-color: #f3f4f5;
}

.select_box {
  background: #fefefe;
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  height: 100%;
  line-height: 86rpx;
  text-align: left;
  position: relative;
  border-radius: 10px;
  border-bottom: 1px solid transparent;
  border-color: rgba(0, 0, 0, 0.1);
}

.select {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: center;
  text-align: center;
  /* position: absolute; */

}

.select_text {
  width: 100%;
  padding: 0 10px;
  color: #666666;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 30rpx;
  /* border: 1px solid red; */
  /* margin-right: 40%; */
}

.select_img {
  width: 32rpx;
  height: 32rpx;
  display: block;
  transition: transform 0.3s;
  margin-top: 12px;
  padding: 0 10px;
}

.select_imgdown {
  width: 44rpx;
  height: 44rpx;
  display: block;
  /* transition: transform 0.3s; */
  z-index: 2;
  /* box-shadow: 0 0rpx 30rpx rgba(0, 0, 0, 0.6); */
}

.select_img_rotate {
  transform: rotate(180deg);
}

.city {
  text-align: center;
  font-size: 17px;
  color: #666666;
}

.selectshop {
  width: 100%;
  /* border: 1px solid blue; */
  display: flex;
  flex-flow: row;
  justify-content: center;
}
.pickerright{
  position: absolute;
  z-index: 2;
  margin-left: 40%;
}

.option_box {
  margin-top: 10rpx;
}

.option_box text {
  display: block;
}

.posterlayout {
  width: 90%;
  margin: 0rpx auto;
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  justify-content: space-between;
  padding-bottom: 30rpx;
}

.imgBox {
  width: 48%;
  background-color: #ffffff;
  margin-top: 30rpx;
  /* border-bottom: 1px solid transparent;
  border-color: rgba(0, 0, 0, 0.3); */
  /* border-radius: 15rpx;
  display: flex;
  flex-flow: row;
  justify-content: center; */
  align-items: center;
  box-shadow: 0 0rpx 30rpx rgba(0, 0, 0, 0.6);
}

.imgBox text {
  text-align: center;
  font-size: 30rpx;
  color: #666666;
  display: block;
  margin-top: -3px;
  padding-bottom: 10rpx;
}

.imgBox image {
  width: 90%;
  padding: 15rpx;
  display: block;
  margin: 0 auto;
}

.shownoposter {
  display: block;
  width: 60%;
  height: 360rpx;
  margin: 150rpx auto;
}

.makePoster{
  text-align: center;
  color: #666666;
  font-size: 28rpx;
  display: block;
  margin: -150rpx auto;
}