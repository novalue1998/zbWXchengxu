page {
    background: #f5f5f5;
}

.icon {
    width: 46px;
    height: 46px;
}

.container {
    padding: 0;
    margin: auto;
    height: 100%;
}

.header {
    margin-top: 15px;
    width: 95%;
    background: #fff;
    border-radius: 10px;
}

.main {
    margin-top: 12px;
    width: 95%;
    background: #fff;
    border-radius: 10px;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}
.weui-flex1{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    text-align: center;
    margin-top: 20px;
    width: 100%;
    overflow: hidden;
    position: relative;
}
.weui-flex__item1 {
    line-height: 2.55555556;
    text-align: center;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    vertical-align: middle;
    width: 33.33333%;
    position: relative;
    float: left;
    margin-top: 15px;
}
.weui-flex__item4 {
    line-height: 2.55555556;
    text-align: center;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    vertical-align: middle;
    width: 25%;
    position: relative;
    float: left;
}

.placeholder {
    font-size: 20rpx;
    margin-top: -40rpx;
}

.time {
    font-size: 20rpx;
    margin-top: -10rpx;
}

button::after {
    border: none;
}

button {
    background-color: #fff;
}

.img {
    display: flex;
}

.erwei {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-right: 3%;
}

.information {
    float: left;
    margin-top: -20rpx;
}

.format {
    position: absolute;
    margin-top: 40px;
    background: -webkit-linear-gradient(left, rgb(242, 48, 48), rgb(255, 140, 94));
    color: rgb(255, 255, 255);
    font-size: 13px;
    padding: 0 10px;
    line-height: 18px;
    border-radius: 3px;
}

.open {
    position: absolute;
    margin-top: 50px;
    background: -webkit-linear-gradient(left, rgb(242, 48, 48), rgb(255, 140, 94));
    color: rgb(255, 255, 255);
    font-size: 10px;
    padding: 0 10px;
    line-height: 18px;
    border-radius: 3px;
}

.slide-image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.weui-flex__item2 {
    line-height: 2.55555556;
    text-align: right;
    width: 33.33333%;
    position: relative;
    margin-top: 50px;
    margin-right: 10px;
}

.weui-flex__item3 {
    line-height: 2.55555556;
    text-align: right;
    width: 25%;
    position: relative;
    margin-top: 50px;
    margin-right: 10px;
}

.code {
    font-size: 26rpx;
    line-height: 1;
    margin-bottom: 20px;
    align-items: center;
    justify-content: center;
}

.czz {
    position: relative;
    margin-top: 130rpx;
    color: #ff8b5d;
    line-height: 30rpx;
    border-radius: 30px;
    border: 1px solid #ff8b5d;
}

.czz text:nth-of-type(1) {
    color: #ff8b5d;
    font-size: 28rpx;
    line-height: 40rpx;
}

.czz text:nth-of-type(2) {
    color: #ff8b5d;
    font-size: 36rpx;
    margin-left: 10rpx;
    display: inline-block;
    margin-top: 6rpx;
}
